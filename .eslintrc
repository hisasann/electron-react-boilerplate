{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/jsx-no-bind": 0,

    "comma-dangle": 0,
    "no-use-before-define": 0,
    "consistent-return": 0,

    "no-unused-vars": 0,
    "no-console": 0,
    "arrow-body-style": 0,
    "max-len": [2, {"code": 200, "tabWidth": 4, "ignoreUrls": true}],

    "react/prop-types": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/prefer-stateless-function": 0
  },
  "plugins": [
    "react"
  ]
}
